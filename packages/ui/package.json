{
  "name": "@plantarium/ui",
  "version": "1.0.0",
  "module": "./src/lib/index.ts",
  "types": "./src/lib/index.ts",
  "exports": {
    ".": {
      "svelte": "./src/lib/index.ts"
    }
  },
  "license": "MIT",
  "scripts": {
    "prepublish": "npm run package",
    "postpublish": "rm -r ./package",
    "dev": "vite dev --host",
    "build": "vite build",
    "prepare": "svelte-kit sync",
    "package": "svelte-kit package && pnpm i --filter=./package",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore . --cache",
    "coverage": "vitest run --coverage",
    "test": "vitest run",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. . && eslint . --fix",
    "clean": "rimraf coverage .nyc_output public/dist .eslintcache"
  },
  "devDependencies": {
    "@plantarium/helpers": "workspace:*",
    "@plantarium/theme": "workspace:*",
    "@plantarium/types": "workspace:*",
    "@sveltejs/adapter-static": "2.0.3",
    "@sveltejs/kit": "1.27.6",
    "@sveltejs/vite-plugin-svelte": "^3.0.1",
    "@testing-library/svelte": "^4.0.5",
    "@typescript-eslint/eslint-plugin": "6.13.2",
    "@typescript-eslint/parser": "6.13.2",
    "@vitest/ui": "^1.0.1",
    "@yr/monotone-cubic-spline": "1.0.3",
    "c8": "8.0.1",
    "eslint": "8.55.0",
    "eslint-config-prettier": "9.1.0",
    "file-saver": "2.0.5",
    "highlight.js": "11.9.0",
    "jsdom": "23.0.1",
    "prettier": "3.1.0",
    "prettier-plugin-svelte": "3.1.2",
    "sass": "1.69.5",
    "svelte": "^4.2.8",
    "svelte-check": "3.6.2",
    "svelte-highlight": "7.4.2",
    "svelte-preprocess": "5.1.1",
    "tslib": "2.6.2",
    "typescript": "5.3.2",
    "uvu": "0.5.6",
    "vite": "5.0.12",
    "vitest": "^1.0.1"
  },
  "type": "module",
  "jest": {
    "testRegex": "./tests/.*.ts$"
  },
  "dependencies": {
    "ajv": "8.12.0",
    "ajv-formats": "2.1.1",
    "css-vars-from-json": "1.1.0",
    "nanoid": "5.0.4",
    "ogl": "^1.0.3",
    "stacktrace-parser": "0.1.10",
    "svelte-json-tree": "2.2.0"
  }
}
